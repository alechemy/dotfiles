{
  // EDITOR
  // ----------------------------------------
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Operator Mono SSm Lig",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    {
      "column": 80,
      "color": "#102a44"
    }
  ],

  // FILES
  // ----------------------------------------
  "files.exclude": {
    "**/.cache": true,
    "**/node_modules": true,
    "**/target": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
},
  // "files.insertFinalNewline": true,
  // "files.trimFinalNewlines": true,
  // "files.trimTrailingWhitespace": true,

  // WORKBENCH
  // ----------------------------------------
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "antialiased",
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorCustomizations": {
    "[Night Owl]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    },
    "[Night Owl No Italics]": {
      "activityBar.background": "#000C1D",
      "activityBar.border": "#102a44",
      "sideBar.background": "#001122",
      "sideBar.border": "#102a44",
      "sideBar.foreground": "#8BADC1"
    }
  },
  "workbench.colorTheme": "Night Owl",
  "workbench.iconTheme": "vscode-icons",

  // ANGULAR
  // ----------------------------------------
  "angular.experimental-ivy": true,

  // JAVASCRIPT
  // ----------------------------------------
  "javascript.preferences.importModuleSpecifier": "relative",

  // TYPESCRIPT
  // ----------------------------------------
  "typescript.preferences.importModuleSpecifier": "relative",
  // this allows Path Intellisense to act as default autocompletion engine
  "typescript.suggest.paths": false,
  "typescript.updateImportsOnFileMove.enabled": "never",

  // PYTHON
  // ----------------------------------------
  "python.defaultInterpreterPath": "/Users/acuster/.pyenv/shims/python",
  "python.languageServer": "Pylance",
  "python.linting.pylintEnabled": true,

  // JAVA
  // ----------------------------------------
  "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:\"/Users/acuster/.vscode-oss/extensions/gabrielbb.vscode-lombok-1.0.1/server/lombok.jar\"",
  "java.semanticHighlighting.enabled": true,

  // EVERYTHING ELSE
  // ----------------------------------------
  "auto-close-tag.activationOnLanguage": ["xml", "HTML (Eex)"],
  "diffEditor.ignoreTrimWhitespace": false,
  "explorer.confirmDragAndDrop": false,
  "gitlens.remotes": [
    {
      "domain": "git.digitalsmiths.com",
      "type": "GitLab"
    }
  ],
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "terminal.integrated.fontFamily": "Operator Mono SSm Lig",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "vsicons.dontShowNewVersionMessage": true,
  "eslint.lintTask.enable": true,
  "eslint.format.enable": true,
  "eslint.alwaysShowStatus": true,
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "update.mode": "manual"
}
